[push]
    default = simple
    autoSetupRemote = true
[color]
    ui = auto
[core]
    autocrlf = false
    safecrlf = true
    editor = vi
    pager = less
[log]
    date = format-local:"%F %T"
[pull]
    rebase = false
[init]
    defaultBranch = main
[commit]
    gpgSign = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[gpg]
    format = ssh
